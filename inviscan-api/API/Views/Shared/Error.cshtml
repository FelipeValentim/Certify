@model string

<html>
<head>
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <style>
        body {
            height: 100vh;
            background-image: radial-gradient(closest-side, #6a64f1, #4b46c1);
            text-align: center;
            color: #fff;
            font-family: "Helvetica Neue";
            font-size: 16px;
            line-height: 1.5;
        }

        div {
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        h1 {
            font-size: 24px;
            line-height: 40px;
            margin: 0 auto 16px;
            padding: 0 20px;
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
            letter-spacing: 0.5px;
            font-weight: 600;
            max-width: 600px;
        }

        p {
            color: #D6DCE0;
            font-weight: 300;
            font-size: 1.2rem;
            max-width: 600px;
            margin: 0 auto 24px;
            text-shadow: 0 2px 3px rgba(0, 0, 0, 0.1);
            letter-spacing: 0.5px;
            padding: 0 20px;
        }

        img {
            height: 260px;
            margin: 0 auto 16px;
        }

    </style>
</head>
<body>

    <div>
        <img src="/error/undraw_location-search.svg" />
        <h1>Oops, algo deu errado.</h1>
        <p>@Model</p>
    </div>

</body>
</html>

